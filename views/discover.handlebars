<div>
  <div class="container">
    <h1>
      Browse News Articles from all Around the Web!
    </h1>
    <form action="" class="search-bar">
	    <input type="search" id="news-search" name="title" pattern=".*\S.*" required>
	    <button class="search-btn" id="news-search-btn" type="submit">
		  <span>Search</span>
	    </button>
    </form>
  </div>
  
  <div class="py-5">
    <div class="container">
      {{#each articles as |article|}}
      <div class="card-custom">
        
        <div class="card.columns">
        <div class="card-deck" id="news-grid">
          
          <div class="card p-3 mb-5 rounded" style="width: 18rem;">
            <img class="card-img-top" src="{{article.urlToImage}}">
            <div class="card-body">
              <h5 class="card-title"><a href="{{article.url}}" target="_blank">{{article.title}}</a></h5>
              <p class="card-text"><span>{{article.description}}</span></p>
              <button class="save-cat-btn" type="button" data-name="{{article.title}}" src="./assets/images/icons8-save-24.png">
                <i class="fa fa-save" style="font-size:24px"></i>
              </button>
            </div>
          </div>
          
        </div>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</div>
