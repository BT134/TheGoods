<div class="columns is-mobile login-card">
  <div class="column is-4 is-offset-4 mt-6">
    <h2 class="page-title is-size-3 has-text-centered pb-2">Signup</h2>
      <form class="box login-form signup-form">
        <div class="field">
          <label class="label">Username</label>
            <div class="control">
              <input class="input" type="text" id="username-signup" placeholder="e.g. ShaunRox">
            </div>
        </div>

        <div class="field">
          <label class="label">Email</label>
            <div class="control">
              <input class="input" type="email" id="email-signup" placeholder="e.g. name@example.com">
            </div>
        </div>

        <div class="field">
          <label class="label">Password</label>
          <div class="control">
            <input class="input" type="password" id="password-signup" placeholder="********">
          </div>
        </div>

        <button class="button is-primary" type="submit">Signup</button>
          <div class="pt-2"> <a href="/login">Go back to Login</a>
          </div>
      </form>
  </div>
</div>

<script src="./js/register.js"></script>